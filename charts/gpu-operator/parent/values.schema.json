{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "gpu-operator": {
            "type": "object",
            "properties": {
                "systemOS": {
                    "type": "string",
                    "enum": [
                        "ubuntu22.04",
                        "ubuntu20.04",
                        "centos7.9",
                        "other"
                    ]
                },
                "operator": {
                    "type": "object",
                    "properties": {
                        "initContainer": {
                            "type": "object",
                            "properties": {
                                "image": {
                                    "type": "string"
                                },
                                "repository": {
                                    "type": "string"
                                },
                                "version": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "driver": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "usePrecompiled":  {
                            "type": "boolean"
                        },
                        "image": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        },
                        "version": {
                            "type": "string"
                        },
                        "repoConfig": {
                            "type": "object",
                            "properties": {
                                "configMapName": {
                                    "type": "string"
                                }
                            }
                        },
                        "rdma": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                },
                                "useHostMofed": {
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                },
                "toolkit": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "image": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        },
                        "version": {
                            "type": "string"
                        }
                    }
                },
                "migManager": {
                    "type": "object",
                    "properties": {
                        "config": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "description": "After installation, the default mode is full GPU. If you need to switch to MIG or vGPU, please go to the appropriate node to make the switch."
        }
    }
}
