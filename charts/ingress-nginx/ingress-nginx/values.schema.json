{
  "$schema": "https://json-schema.org/schema#",
  "type": "object",
  "default": {},
  "properties": {
    "ingress-nginx": {
      "type": "object",
      "default": {},
      "title": "Ingress configuration",
      "properties": {
        "controller": {
          "type": "object",
          "title": "Ingress Controller",
          "default": {},
          "properties": {
            "replicaCount": {
              "type": "integer",
              "default": 2,
              "title": "Replica Count"
            },
            "metrics": {
              "type": "object",
              "title": "Metrics",
              "default": {},
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": false,
                  "title": "Enable",
                  "description": "enable ingress controller metrics"
                },
                "serviceMonitor": {
                  "type": "object",
                  "default": {},
                  "properties": {
                    "enabled": {
                      "title": "Install",
                      "type": "boolean",
                      "description": "install serviceMonitor CR for ingress controller. Notice: It is required to install Prometheus CRDs firstly"
                    }
                  }
                }
              }
            },
            "ingressClassResource": {
              "type": "object",
              "title": "Ingress Class",
              "properties": {
                "name": {
                  "type": "string",
                  "title": "Ingress Class Name"
                },
                "default": {
                  "type": "boolean",
                  "title": "Default IngressClass",
                  "description": "set this ingressClass as the default ingressClass for the cluster."
                }
              }
            },
            "electionID": {
              "type": "string",
              "title": "Election ID",
              "description": "If more than one ingress controller are installed in a same namespace, it needs specify a different election id."
            },
            "service": {
              "type": "object",
              "properties": {
                "ipFamilyPolicy": {
                  "type": "string",
                  "title": "IP Family Policy",
                  "enum": [
                    "SingleStack",
                    "PreferDualStack",
                    "RequireDualStack"
                  ]
                },
                "type": {
                  "type": "string",
                  "title": "Type",
                  "enum": [
                    "LoadBalancer",
                    "NodePort",
                    "ClusterIP"
                  ]
                }
              },
              "title": "Service"
            },
            "image": {
              "title": "Ingress Controller Image",
              "type": "object",
              "properties": {
                "registry": {
                  "type": "string",
                  "title": "Registry"
                },
                "image": {
                  "type": "string",
                  "title": "Image"
                }
              },
              "required": []
            },
            "admissionWebhooks": {
              "type": "object",
              "title": "Admission Webhook",
              "properties": {
                "patch": {
                  "type": "object",
                  "title": ".",
                  "properties": {
                    "image": {
                      "type": "object",
                      "title": "Admission Webhook Image",
                      "properties": {
                        "registry": {
                          "type": "string",
                          "title": "Registry"
                        },
                        "image": {
                          "type": "string",
                          "title": "Image"
                        }
                      },
                      "required": []
                    }
                  }
                }
              }
            },
            "affinity": {
              "type": "object",
              "properties": {
                "nodeAffinity": {
                  "type": "object",
                  "properties": {
                    "preferredDuringSchedulingIgnoredDuringExecution": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "preference": {
                            "type": "object",
                            "title": "Preference",
                            "properties": {
                              "matchExpressions": {
                                "type": "array",
                                "title": "Match Expressions",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "key": {
                                      "type": "string",
                                      "title": "Node Label"
                                    },
                                    "operator": {
                                      "type": "string",
                                      "title": "Operator"
                                    }
                                  }
                                }
                              },
                              "weight": {
                                "type": "integer",
                                "title": "Weight"
                              }
                            }
                          }
                        }
                      },
                      "title": "Preferred During Scheduling Ignored During Execution"
                    }
                  },
                  "title": "Node Affinity"
                }
              },
              "title": "Affinity"
            }
          }
        }
      }
    },
    "alert": {
      "type": "object",
      "title": "Alert Settings",
      "properties": {
        "prometheusRule": {
          "type": "object",
          "properties": {
            "create": {
              "title": "Install",
              "type": "boolean",
              "description": "install PrometheusRule CR for ingress controller. Notice: It is required to install Prometheus CRDs firstly"
            }
          }
        }
      }
    }
  }
}