{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "hami": {
            "type": "object",
            "properties": {
                "devicePlugin": {
                    "type": "object",
                    "properties": {
                        "deviceCoreScaling": {
                            "type": "number"
                        },
                        "deviceMemoryScaling": {
                            "type": "number"
                        },
                        "deviceSplitCount": {
                            "type": "integer"
                        }
                    }
                },
                "resources": {
                    "type": "object",
                    "properties": {
                        "limits": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        },
                        "requests": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "scheduler": {
                    "type": "object",
                    "properties": {
                        "serviceMonitor": {
                            "type": "object",
                            "properties": {
                                "enable": {
                                    "type": "boolean",
                                    "description": "Ensure the insight-agent is installed and running to enable this feature; otherwise, the nvidia-vgpu installation may fail."
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
